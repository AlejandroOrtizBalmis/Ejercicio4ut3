<Window x:Class="Ejercicio4ut3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ejercicio4ut3"
        mc:Ignorable="d"
        Title="Visor de imagenes" Height="580" Width="750"
        MinHeight="580"
        MinWidth="750" 
        Icon="gallery.ico">
    <Window.Resources>
    <Style TargetType="Image">
        <Setter Property="Margin"
                Value="5" />
        <Setter Property="Height"
                Value="200" />
        <Setter Property="Source"
                Value="episodioIV.jpg" />

    </Style>
        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="5" />
        </Style>
    </Window.Resources>
    
    <DockPanel LastChildFill="True">
        <DockPanel LastChildFill="False"
                   DockPanel.Dock="Bottom"
                   Margin="10px"
                   Background="LightBlue"
                   >
            <TextBlock 
                        DockPanel.Dock="Left"
                        Text="Nº de imagenes : 10"
                        FontFamily="Rubik"
                        FontSize="20" 
                        Margin="5,15"/>
            <TextBlock DockPanel.Dock="Right"
                       Text="Diseñado por Alejandro Ortiz"
                       FontFamily="Rubik"
                       FontSize="20"
                       Margin="5,15" />


        </DockPanel>

        <Border DockPanel.Dock="Right"
                BorderThickness="3"
                BorderBrush="Black"
                CornerRadius="3"
                Margin="10">
            <DockPanel LastChildFill="False"
                       Background="LightGreen"
                       Width="125">
                <StackPanel Orientation="Vertical"
                            DockPanel.Dock="Top">
                    <Button Content="Añadir imagen" />
                    <Button Content="Eliminar imagen" />
                    <Button Content="Eliminar todas" />

                </StackPanel>
                <StackPanel Orientation="Vertical"
                            DockPanel.Dock="Bottom">
                    <Button Content="Rotar"/>
                    <Button Content="Recortar"/>

                </StackPanel>


            </DockPanel>
        </Border>
        <TextBlock  DockPanel.Dock="Top"
                    Text="Visor de imagenes"
                    FontFamily="Rubik"
                    FontSize="40" 
                    HorizontalAlignment="Center"/>
        <WrapPanel>
            <Image />
            <Image />
            <Image />
            <Image />
            <Image />
            <Image />
            <Image />
            <Image />
        </WrapPanel>

    </DockPanel>
</Window>
